{
  "manifest_version": 3,
  "name": "LinkedIn Smart Greet",
  "version": "2.0.0",
  "description": "Smart, safe LinkedIn greeting assistant with templates, delays, limits, and analytics.",
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"]
    }
  ]
}
